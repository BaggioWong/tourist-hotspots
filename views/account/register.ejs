<div class="panel panel-default panel-size">
  <div class="panel-heading">
    <h3 class="panel-title">注册</h3>
  </div>
  <div class="panel-body">
    <form class="remove-margin">
    	<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
		  <input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1" ng-model="credentials.username" ng-click="hideErrorMsg()">
		</div>

		<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-briefcase"></span></span>
		  <input type="text" class="form-control" placeholder="Password" aria-describedby="basic-addon1" ng-model="credentials.password" ng-click="hideErrorMsg()">
		</div>

		<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-briefcase"></span></span>
		  <input type="text" class="form-control" placeholder="Re-enter password" aria-describedby="basic-addon1">
		</div>

		<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope"></span></span>
		  <input type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon1" ng-model="credentials.email" ng-click="hideErrorMsg()">
		</div>

		<div class="input-margin">
			  <div uib-alert class="alert-success" ng-show="showSuccessMsg">{{success.msg}}</div>
		</div>

		<div class="input-margin">
			  <div uib-alert class="alert-danger" ng-show="showErrorMsg">{{error.msg}}</div>
		</div>

		<span class="register-text">已经注册? <a ui-sref="login">点击登陆.</a></span>
		<button type="button" class="btn btn-default float-right" ng-click="register()">注册</button>
    </form>
  </div>
</div>
