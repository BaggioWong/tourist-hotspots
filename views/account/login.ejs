<div class="panel panel-default panel-size">
  <div class="panel-heading">
    <h3 class="panel-title">登陆</h3>
  </div>
  <div class="panel-body">
    <form class="remove-margin">
    	<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user"></span></span>
		  <input type="text" class="form-control" placeholder="Username" ng-model="credentials.username" aria-describedby="basic-addon1" ng-focus="hideErrorMsg()">
		</div>

		<div class="input-group input-margin">
		  <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-briefcase"></span></span>
		  <input type="password" class="form-control" placeholder="Password" ng-model="credentials.password" aria-describedby="basic-addon1" ng-focus="hideErrorMsg()">
		</div>

		<div class="input-margin">
			  <div uib-alert class="alert-danger" ng-show="showErrorMsg">{{error.msg}}</div>
		</div>

		<span class="register-text">没有账户? <a ui-sref="register">点击注册.</a></span>
		<button type="button" class="btn btn-default float-right" ng-click="login()">登陆</button>
    </form>
  </div>
</div>
